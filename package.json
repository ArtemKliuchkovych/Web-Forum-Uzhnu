{
    "name": "Forum UzhNU",
    "version": "1.0.0",
    "description": "A Web Forum for Uzhhorod National University",
    "main": "index.js",
    "scripts": {
        "start": "echo \"App has been started\" && exit 1",
        "start:dev": "webpack serve -c config/webpack.development.config.js",
        "build": "webpack build -c config/webpack.production.config.js",
        "build:dev": "webpack build -c config/webpack.development.config.js",
        "lint": "eslint --max-warnings 0 ./src",
        "lint:fix": "eslint --fix --ext .js,.jsx src",
        "test": "echo \"Error: no test specified\" && exit 1",
        "prepare": "husky && husky install",
        "test:ct": "cypress run --component --browser chrome",
        "test:open": "cypress open"
    },
    "author": "Ключкович Артем",
    "license": "ISC",
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint --ignore-pattern .gitignore --fix ./src"
        ],
        "*.{js,jsx,css}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "prop-types": "^15.8.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@babel/preset-react": "^7.24.7",
        "@cypress/code-coverage": "^3.13.2",
        "@eslint/js": "^9.12.0",
        "@istanbuljs/nyc-config-babel": "^3.0.0",
        "babel-loader": "^9.2.1",
        "babel-plugin-istanbul": "^7.0.0",
        "babel-plugin-react-css-modules": "^5.2.6",
        "copy-webpack-plugin": "^12.0.2",
        "css-loader": "^7.1.2",
        "css-modules": "^0.3.0",
        "cypress": "^13.15.0",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-cypress": "^3.5.0",
        "eslint-plugin-import": "^2.30.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^15.11.0",
        "html-webpack-plugin": "^5.6.0",
        "husky": "^8.0.0",
        "lint-staged": "^15.2.10",
        "mini-css-extract-plugin": "^2.9.1",
        "prettier": "3.3.3",
        "style-loader": "^4.0.0",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0",
        "webpack-merge": "^6.0.1"
    }
}
